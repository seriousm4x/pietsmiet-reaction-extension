{
  "name": "PietSmiet Reactions YouTube",
  "description": "Adds a textbox underneath the YouTube player so see if a PietSmiet reaction exists to this video.",
  "version": "1.2.0",
  "manifest_version": 3,
  "minimum_chrome_version": "102.0.0.0",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*"
      ],
      "js": [
        "reactions-youtube.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://www.pietsmiet.de/*"
      ],
      "js": [
        "reactions-pietsmiet.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
